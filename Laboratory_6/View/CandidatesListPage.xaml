<Page x:Class="Laboratory_6.View.CandidatesListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Laboratory_6.View"
      xmlns:converter="clr-namespace:Laboratory_6.Converter"
      
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Список кандидатів">

    <Page.Resources>
        <converter:LanguagesToStringConverter x:Key="LanguagesConverter"/>
        <converter:EnumToStringConverter x:Key="EnumConverter"/>
    </Page.Resources>
    
    <Grid Margin="10">
                
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Освіта:"/>
            <ComboBox x:Name="EducationFilterComboBox" Width="120"/>
            <Label Content="Стаж від:" Margin="10,0,0,0"/>
            <TextBox x:Name="MinExperienceTextBox" Width="40"/>
            <Label Content="до:"/>
            <TextBox x:Name="MaxExperienceTextBox" Width="40"/>
            <Label Content="Володіння ПК:"/>
            <ComboBox x:Name="ComputerLiteracyFilterComboBox" Width="120"/>
            <Button Content="Фільтрувати" Click="FilterButton_Click" Margin="10,0,0,0"/>
            <Button Content="Скинути" Click="ResetFilterButton_Click" Margin="5,0,0,0"/>
        </StackPanel>

        <DataGrid Grid.Row="1" x:Name="CandidatesDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="П.І.П." Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Дата народження" Binding="{Binding DateOfBirth, StringFormat='dd.MM.yyyy'}" Width="Auto"/>
                <DataGridTextColumn Header="Освіта" Binding="{Binding Education}" Width="Auto"/>
                <DataGridTemplateColumn Header="Іноземні мови" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding KnowLanguage, Converter={StaticResource LanguagesConverter}}" TextWrapping="Wrap" Padding="4,2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Стаж" Binding="{Binding WorkExperience}" Width="Auto"/>
                <DataGridTextColumn Header="ПК" Binding="{Binding ComputerLiteracy, Converter={StaticResource EnumConverter}}" Width="Auto"/>
                <DataGridCheckBoxColumn Header="Рекомендації" Binding="{Binding Recommendations}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Додати" Width="100" Click="AddButton_Click"/>
            <Button Content="Редагувати" Width="100" Margin="5,0,0,0" Click="EditButton_Click"/>
            <Button Content="Видалити" Width="100" Margin="5,0,0,0" Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Page>