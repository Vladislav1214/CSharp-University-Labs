<Window x:Class="Lab_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="460" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Grid.Column="0" Header="Автозаправка" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Паливо" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="12" Margin="10,0"/>
                    <TextBlock Text="Ціна" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="12" Margin="10,0"/>
                    <TextBlock Text="грн." Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="12" Margin="8,0"/>
                    <ComboBox x:Name="FuelTypeComboBox" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="2,8" SelectionChanged="FuelTypeComboBox_SelectionChanged"/>
                    <TextBox  x:Name="FuelPriceTextBox" VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="1" FontSize="12" IsReadOnly="True" Margin="2,8"/>
                </Grid>

                <GroupBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <RadioButton x:Name="ByQuantityRadioButton" Checked="ByQuantityRadioButton_Checked" Grid.Row="0" Grid.Column="0" IsChecked="True" Content="Кількість" VerticalAlignment="Center"/>
                        <TextBox x:Name="FuelQuantityTextBox" VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="1" Margin="5,8" IsReadOnly="False" TextChanged="FuelTextBox_TextChanged" IsEnabled="True"/>
                        <TextBlock Text="л." Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="8,0,0,0"/>

                        <RadioButton x:Name="BySumRadioButton" Checked="BySumRadioButton_Checked" Grid.Row="1" Grid.Column="0" Content="Сума" VerticalAlignment="Center"/>
                        <TextBox x:Name="FuelSumTextBox" VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="1" Margin="5,8" TextChanged="FuelTextBox_TextChanged" IsReadOnly="True" IsEnabled="False"/>
                        <TextBlock Text="грн." Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="8,0,0,0"/>
                        <Grid Grid.Column="1"/>
                    </Grid>
                </GroupBox>

                <GroupBox x:Name="DoVudachi_GroupBox" Header="До оплати:" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Margin="8,2">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock x:Name="FuelTotalCostTextBlock" Text="0,00" VerticalAlignment="Center" FontSize="38" Margin="0,0,10,0"/>
                        <TextBlock x:Name="DoVudachi_TextBlock" Text="грн." Width="21" VerticalAlignment="Bottom" Margin="0,0,5,5"/>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </GroupBox>
        
        <GroupBox Grid.Row="0" Grid.Column="1" Header="Міні-Кафе" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Ціна" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="Кількість" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <CheckBox x:Name="HotDogCheckBox" Content="Хот-дог" HorizontalAlignment="Left" Margin="8,0,0,0" Grid.Row="1" VerticalAlignment="Center" 
                          Checked="HotDogCheckBox_Checked" Unchecked="HotDogCheckBox_Unchecked"/>
                <CheckBox x:Name="HamburgerCheckBox" Content="Гамбургер" HorizontalAlignment="Left" Margin="8,0,0,0" Grid.Row="2" VerticalAlignment="Center"
                          Checked="HamburgerCheckBox_Checked" Unchecked="HamburgerCheckBox_Unchecked"/>
                <CheckBox x:Name="FriesCheckBox" Content="Картопля-фрі" HorizontalAlignment="Left" Margin="8,0,0,0" Grid.Row="3" VerticalAlignment="Center" 
                          Checked="FriesCheckBox_Checked" Unchecked="FriesCheckBox_Unchecked"/>
                <CheckBox x:Name="ColaCheckBox" Content="Кока-кола" HorizontalAlignment="Left" Margin="8,0,0,0" Grid.Row="4" VerticalAlignment="Center"
                          Checked="ColaCheckBox_Checked" Unchecked="ColaCheckBox_Unchecked"/>
                
                <TextBox x:Name="HotDogPriceTextBox" Text="0,00" Grid.Column="1" Grid.Row="1" Margin="5" VerticalContentAlignment="Center" IsReadOnly="True"/>
                <TextBox x:Name="HamburgerPriceTextBox" Text="0,00" Grid.Column="1" Grid.Row="2" Margin="5" VerticalContentAlignment="Center" IsReadOnly="True"/>
                <TextBox x:Name="FriesPriceTextBox" Text="0,00" Grid.Column="1" Grid.Row="3" Margin="5" VerticalContentAlignment="Center" IsReadOnly="True"/>
                <TextBox x:Name="ColaPriceTextBox" Text="0,00" Grid.Column="1" Grid.Row="4" Margin="5" VerticalContentAlignment="Center" IsReadOnly="True"/>

                <TextBox x:Name="HotDogQuantityTextBox" Grid.Column="2" Grid.Row="1" Margin="5" VerticalContentAlignment="Center" IsReadOnly="True" IsEnabled="False" TextChanged="QuantityTextBox_TextChanged"/>
                <TextBox x:Name="HamburgerQuantityTextBox" Grid.Column="2" Grid.Row="2" Margin="5" VerticalContentAlignment="Center" IsReadOnly="True" IsEnabled="False" TextChanged="QuantityTextBox_TextChanged"/>
                <TextBox x:Name="FriesQuantityTextBox" Grid.Column="2" Grid.Row="3" Margin="5" VerticalContentAlignment="Center" IsReadOnly="True" IsEnabled="False" TextChanged="QuantityTextBox_TextChanged"/>
                <TextBox x:Name="ColaQuantityTextBox" Grid.Column="2" Grid.Row="4" Margin="5" VerticalContentAlignment="Center" IsReadOnly="True" IsEnabled="False" TextChanged="QuantityTextBox_TextChanged"/>

                <GroupBox Header="До оплати:" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" Margin="8,2">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock x:Name="CafeTotalCostTextBlock" Text="0,00" VerticalAlignment="Center" FontSize="38" Margin="0,0,10,0"/>
                        <TextBlock Text="грн." VerticalAlignment="Bottom" Margin="0,0,5,5"/>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Header="ВСЬОГО до сплати" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Click="CalculateButton" Content="Прорахувати" Margin="60,20"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="GrandTotalTextBlock" Text="0,00" VerticalAlignment="Center" FontSize="38" Margin="0,0,10,0"/>
                    <TextBlock Text="грн." VerticalAlignment="Bottom" Margin="0,0,5,5"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
