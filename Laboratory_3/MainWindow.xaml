<Window x:Class="Laboratory_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratory_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Завдання 1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label x:Name="InfoLabel" Content="Початок роботи" FontSize="16" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Привіт" Width="100" Margin="5" Click="HelloButton_Click"/>
                    <Button Content="До побачення" Width="100" Margin="5" Click="GoodbyeButton_Click"/>
                </StackPanel>
            </StackPanel>
        </TabItem>

        <TabItem Header="Завдання 2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="InfoTextBlock" Text="Це текст, який можна сховати." FontSize="14" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Сховати" Width="100" Margin="5" Click="HideButton_Click_Task2"/>
                    <Button Content="Показати" Width="100" Margin="5" Click="ShowButton_Click_Task2"/>
                </StackPanel>
            </StackPanel>
        </TabItem>

        <TabItem Header="Завдання 3">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBox x:Name="InputTextBox" Width="210" Margin="5"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Сховати" Width="65" Margin="5" Click="HideButton_Click_Task3"/>
                    <Button Content="Показати" Width="65" Margin="5" Click="ShowButton_Click_Task3"/>
                    <Button Content="Очистити" Width="65" Margin="5" Click="ClearButton_Click_Task3"/>
                </StackPanel>
            </StackPanel>

        </TabItem>

        <TabItem Header="Завдання 4">
            <Grid>
                <Button x:Name="Button1" Content="Червона" Background="IndianRed" FontWeight="Bold" Width="100" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50" Click="GameButton_Click"/>
                <Button x:Name="Button2" Content="Синя" Background="CornflowerBlue" Foreground="White" Width="120" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="60" Click="GameButton_Click"/>
                <Button x:Name="Button3" Content="Зелена" Background="SeaGreen" FontStyle="Italic" FontSize="16" Width="90" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Click="GameButton_Click"/>
                <Button x:Name="Button4" Content="Жовта" Background="Gold" Width="150" Height="35" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="40" Click="GameButton_Click"/>
                <Button x:Name="Button5" Content="Фіолетова" Background="Orchid" Width="110" Height="45" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="70" Click="GameButton_Click"/>
            </Grid>

        </TabItem>

        <TabItem Header="Завдання 5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Вага у фунтах" Background="#4CAF50" Foreground="White" FontSize="24" Padding="10"/>
                <TextBox x:Name="PoundsTextBox" Grid.Row="0" Width="200" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="16"/>

                <Button x:Name="ConvertButton" Grid.Row="1" Content="Розрахувати" Background="#4DD0E1" Foreground="#D50000" FontSize="20" Padding="5" Click="ConvertButton_Click"/>

                <TextBlock Grid.Row="2" Text="Вага у кілограмах:" Padding="10" FontSize="18" VerticalAlignment="Top">
                    <TextBlock.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#8BC34A" Offset="0.0" />
                            <GradientStop Color="#558B2F" Offset="1.0" />
                        </LinearGradientBrush>
                    </TextBlock.Background>
                </TextBlock>
                <TextBox x:Name="KgsTextBox" Grid.Row="2" Width="250" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" IsReadOnly="True" FontSize="16" TextAlignment="Center"/>
            </Grid>
        </TabItem>

        <TabItem Header="Завдання 6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <WrapPanel Grid.Column="0" Margin="2">
                    <Button Content="Navy" Background="Navy" Foreground="White" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                    <Button Content="Blue" Background="Blue" Foreground="White" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                    <Button Content="Aqua" Background="Aqua" Foreground="Black" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                    <Button Content="Teal" Background="Teal" Foreground="White" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                    <Button Content="Olive" Background="Olive" Foreground="White" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                    <Button Content="Green" Background="Green" Foreground="White" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                    <Button Content="Lime" Background="Lime" Foreground="Black" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                    <Button Content="Yellow" Background="Yellow" Foreground="Black" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                    <Button Content="Orange" Background="Orange" Foreground="Black" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                    <Button Content="Red" Background="Red" Foreground="White" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                    <Button Content="Maroon" Background="Maroon" Foreground="White" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                    <Button Content="Fuchsia" Background="Fuchsia" Foreground="Black" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                    <Button Content="Purple" Background="Purple" Foreground="White" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                    <Button Content="Black" Background="Black" Foreground="White" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                    <Button Content="Silver" Background="Silver" Foreground="Black" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                    <Button Content="Gray" Background="Gray" Foreground="Black" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                    <Button Content="White" Background="White" Foreground="Black" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                </WrapPanel>

                <Border Grid.Column="1" Background="WhiteSmoke"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
