<Window x:Class="Lab_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBox x:Name="MainDisplay" Text="0" Grid.Row="1" Grid.ColumnSpan="4" Margin="3" 
                 IsReadOnly="True" FontSize="36" FontWeight="Bold" TextAlignment="Right"
                 VerticalContentAlignment="Center" Padding="3" />
        <TextBox x:Name="ExpressionDisplay" Grid.Row="0" Grid.ColumnSpan="4" Margin="3" 
                 IsReadOnly="True" FontSize="14" FontWeight="Normal" TextAlignment="Right"
                 VerticalContentAlignment="Center" Padding="2" Foreground="Gray"/>

        <Button Content="0" Grid.Column="1" Grid.Row="6" Margin="3" Click="DigitButton_Click" />
        <Button Content="1" Grid.Column="0" Grid.Row="5" Margin="3" Click="DigitButton_Click" />
        <Button Content="2" Grid.Column="1" Grid.Row="5" Margin="3" Click="DigitButton_Click" />
        <Button Content="3" Grid.Column="2" Grid.Row="5" Margin="3" Click="DigitButton_Click" />
        <Button Content="4" Grid.Column="0" Grid.Row="4" Margin="3" Click="DigitButton_Click" />
        <Button Content="5" Grid.Column="1" Grid.Row="4" Margin="3" Click="DigitButton_Click" />
        <Button Content="6" Grid.Column="2" Grid.Row="4" Margin="3" Click="DigitButton_Click" />
        <Button Content="7" Grid.Column="0" Grid.Row="3" Margin="3" Click="DigitButton_Click" />
        <Button Content="8" Grid.Column="1" Grid.Row="3" Margin="3" Click="DigitButton_Click" />
        <Button Content="9" Grid.Column="2" Grid.Row="3" Margin="3" Click="DigitButton_Click" />
        <Button Content="." Grid.Column="0" Grid.Row="6" Margin="3" Click="DecimalPointButton_Click" />

        <Button Content="=" Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="2" Margin="3" Click="EqualsButton_Click" />
        <Button Content="+" Grid.Column="3" Grid.Row="5" Margin="3" Click="OperationButton_Click" />
        <Button Content="-" Grid.Column="3" Grid.Row="4" Margin="3" Click="OperationButton_Click" />
        <Button Content="*" Grid.Column="3" Grid.Row="3" Margin="3" Click="OperationButton_Click" />
        <Button Content="/" Grid.Column="3" Grid.Row="2" Margin="3" Click="OperationButton_Click" />

        <Button Content="CE" Grid.Column="0" Grid.Row="2" Margin="3" Click="ClearEntryButton_Click" />
        <Button Content="C" Grid.Column="1" Grid.Row="2" Margin="3" Click="ClearAllButton_Click" />
        <Button Content="&lt;" Grid.Column="2" Grid.Row="2" Margin="3" Click="BackspaceButton_Click" />
    </Grid>
</Window>
