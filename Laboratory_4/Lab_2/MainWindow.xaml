<Window x:Class="Lab_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_2"
        mc:Ignorable="d"
        Title="BestOil" Height="520" Width="620"
        ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Background="#F0F0F0" FontSize="14">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Автозаправка" Grid.Row="0" Grid.Column="0" Margin="5" Padding="5" BorderBrush="#003366" Foreground="#003366">
            <StackPanel>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Паливо:" Margin="0,0,10,10" VerticalAlignment="Center" Foreground="Black"/>
                    <ComboBox x:Name="FuelTypeComboBox" Grid.Column="1" Margin="0,0,0,10" SelectionChanged="FuelTypeComboBox_SelectionChanged"/>

                    <TextBlock Text="Ціна:" Grid.Row="1" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="Black"/>
                    <TextBox x:Name="FuelPriceTextBox" Grid.Row="1" Grid.Column="1" IsReadOnly="True" VerticalContentAlignment="Center" Height="24"/>
                    <TextBlock Text="грн." Grid.Row="1" Grid.Column="2" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="Black"/>
                </Grid>

                <GroupBox Header="Варіант оплати" Margin="0,10" Padding="5" BorderBrush="#003366" Foreground="#003366">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <RadioButton x:Name="ByQuantityRadioButton" Content="Кількість" GroupName="PayType" IsChecked="True" 
                                     Checked="RadioButton_Checked" VerticalAlignment="Center" Margin="0,0,10,10" Foreground="Black"/>
                        <TextBox x:Name="FuelQuantityTextBox" Grid.Column="1" Margin="0,0,0,10" Height="24" VerticalContentAlignment="Center" TextChanged="FuelTextBox_TextChanged"/>
                        <TextBlock Text="л." Grid.Column="2" Margin="5,0,0,10" VerticalAlignment="Center" Foreground="Black"/>

                        <RadioButton x:Name="BySumRadioButton" Content="Сума" GroupName="PayType" Grid.Row="1" 
                                     Checked="RadioButton_Checked" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="Black"/>
                        <TextBox x:Name="FuelSumTextBox" Grid.Row="1" Grid.Column="1" IsEnabled="False" Height="24" VerticalContentAlignment="Center" TextChanged="FuelTextBox_TextChanged"/>
                        <TextBlock Text="грн." Grid.Row="1" Grid.Column="2" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="Black"/>
                    </Grid>
                </GroupBox>

                <GroupBox x:Name="DoVudachi_GroupBox" Header="До оплати:" Margin="0,10,0,0" Padding="5" BorderBrush="#003366" Foreground="#003366">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock x:Name="FuelTotalCostTextBlock" Text="0.00" FontSize="30" FontWeight="Bold" Margin="0,0,5,0" VerticalAlignment="Center" Foreground="Black"/>
                        <TextBlock x:Name="DoVudachi_TextBlock" Text="грн." VerticalAlignment="Bottom" Margin="0,0,0,6" Foreground="Black"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Міні-Кафе" Grid.Row="0" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#003366" Foreground="#003366">
            <StackPanel>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.4*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Товар" FontWeight="Bold" Foreground="Black"/>
                    <TextBlock Text="Ціна" Grid.Column="1" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Black"/>
                    <TextBlock Text="К-сть" Grid.Column="2" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Black"/>
                </Grid>

                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.4*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="HotDogCheckBox" Content="Хот-дог" VerticalAlignment="Center" Foreground="Black"
                              Checked="CafeCheckBox_CheckedChanged" Unchecked="CafeCheckBox_CheckedChanged"/>
                    <TextBox x:Name="HotDogPriceTextBox" Grid.Column="1" Margin="2" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox x:Name="HotDogQuantityTextBox" Grid.Column="2" Margin="2" IsEnabled="False" VerticalContentAlignment="Center" TextChanged="QuantityTextBox_TextChanged"/>
                </Grid>

                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.4*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="HamburgerCheckBox" Content="Гамбургер" VerticalAlignment="Center" Foreground="Black"
                              Checked="CafeCheckBox_CheckedChanged" Unchecked="CafeCheckBox_CheckedChanged"/>
                    <TextBox x:Name="HamburgerPriceTextBox" Grid.Column="1" Margin="2" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox x:Name="HamburgerQuantityTextBox" Grid.Column="2" Margin="2" IsEnabled="False" VerticalContentAlignment="Center" TextChanged="QuantityTextBox_TextChanged"/>
                </Grid>

                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.4*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="FriesCheckBox" Content="Картопля-фрі" VerticalAlignment="Center" Foreground="Black"
                              Checked="CafeCheckBox_CheckedChanged" Unchecked="CafeCheckBox_CheckedChanged"/>
                    <TextBox x:Name="FriesPriceTextBox" Grid.Column="1" Margin="2" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox x:Name="FriesQuantityTextBox" Grid.Column="2" Margin="2" IsEnabled="False" VerticalContentAlignment="Center" TextChanged="QuantityTextBox_TextChanged"/>
                </Grid>

                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.4*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="ColaCheckBox" Content="Кока-кола" VerticalAlignment="Center" Foreground="Black"
                              Checked="CafeCheckBox_CheckedChanged" Unchecked="CafeCheckBox_CheckedChanged"/>
                    <TextBox x:Name="ColaPriceTextBox" Grid.Column="1" Margin="2" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox x:Name="ColaQuantityTextBox" Grid.Column="2" Margin="2" IsEnabled="False" VerticalContentAlignment="Center" TextChanged="QuantityTextBox_TextChanged"/>
                </Grid>

                <GroupBox Header="До оплати (кафе):" Margin="0,20,0,0" Padding="5" BorderBrush="#003366" Foreground="#003366">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock x:Name="CafeTotalCostTextBlock" Text="0.00" FontSize="30" FontWeight="Bold" Margin="0,0,5,0" VerticalAlignment="Center" Foreground="Black"/>
                        <TextBlock Text="грн." VerticalAlignment="Bottom" Margin="0,0,0,6" Foreground="Black"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Всього до сплати" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Padding="10" BorderBrush="#003366" Foreground="#003366">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="Очистити" Click="ClearButton_Click" Height="30" Width="80" Margin="0,0,10,0"/>
                    <Button Content="Прорахувати" Click="CalculateButton"  Height="45" Width="140" FontSize="18" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="GrandTotalTextBlock" Text="0.00" FontSize="40" FontWeight="Bold" Margin="0,0,10,0" Foreground="Black"/>
                    <TextBlock Text="грн." VerticalAlignment="Bottom" Margin="0,0,0,8" FontSize="18" Foreground="Black"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>