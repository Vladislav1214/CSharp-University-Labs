<Window x:Class="Lab_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_1"
        mc:Ignorable="d"
        Title="Calculator" Height="450" Width="350" ResizeMode="CanMinimize">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="ExpressionDisplay" Grid.Row="0" Grid.ColumnSpan="4" 
                 IsReadOnly="True" BorderThickness="0" TextAlignment="Right" 
                 Foreground="Gray" FontSize="14" VerticalContentAlignment="Center" Focusable="False"/>

        <TextBox x:Name="MainDisplay" Grid.Row="1" Grid.ColumnSpan="4" 
                 IsReadOnly="True" TextAlignment="Right" FontSize="32" FontWeight="Bold" 
                 VerticalContentAlignment="Center" Text="0" Margin="0,0,0,10" Focusable="False"/>

        <Button Content="CE" Grid.Row="2" Grid.Column="0" Margin="2" Click="ButtonClick"/>
        <Button Content="C" Grid.Row="2" Grid.Column="1" Margin="2" Click="ButtonClick"/>
        <Button Content="&lt;" Grid.Row="2" Grid.Column="2" Margin="2" Click="ButtonClick"/>
        <Button Content="/" Grid.Row="2" Grid.Column="3" Margin="2" Click="ButtonClick"/>

        <Button Content="7" Grid.Row="3" Grid.Column="0" Margin="2" Click="ButtonClick"/>
        <Button Content="8" Grid.Row="3" Grid.Column="1" Margin="2" Click="ButtonClick"/>
        <Button Content="9" Grid.Row="3" Grid.Column="2" Margin="2" Click="ButtonClick"/>
        <Button Content="*" Grid.Row="3" Grid.Column="3" Margin="2" Click="ButtonClick"/>

        <Button Content="4" Grid.Row="4" Grid.Column="0" Margin="2" Click="ButtonClick"/>
        <Button Content="5" Grid.Row="4" Grid.Column="1" Margin="2" Click="ButtonClick"/>
        <Button Content="6" Grid.Row="4" Grid.Column="2" Margin="2" Click="ButtonClick"/>
        <Button Content="-" Grid.Row="4" Grid.Column="3" Margin="2" Click="ButtonClick"/>

        <Button Content="1" Grid.Row="5" Grid.Column="0" Margin="2" Click="ButtonClick"/>
        <Button Content="2" Grid.Row="5" Grid.Column="1" Margin="2" Click="ButtonClick"/>
        <Button Content="3" Grid.Row="5" Grid.Column="2" Margin="2" Click="ButtonClick"/>
        <Button Content="+" Grid.Row="5" Grid.Column="3" Margin="2" Click="ButtonClick"/>

        <Button Content="0" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="2" Click="ButtonClick"/>
        <Button Content="." Grid.Row="6" Grid.Column="2" Margin="2" Click="ButtonClick"/>
        <Button Content="=" Grid.Row="6" Grid.Column="3" Margin="2" Click="ButtonClick"/>
    </Grid>
</Window>